<p id="notice"><%= notice %></p>
<div class="large-3 small-12 column">
  <%=image_tag @musiccd.cover_url%>
</div>
 
<div class="large-9 small-12 column">
  <h3>
    <%= @musiccd.title %>
    (<%= @musiccd.release_year %>)
  </h3>
  <p class="label movie-label radius mb1">$ <%= @musiccd.price %></p>
 
  <p><%= @musiccd.description %></p>

	<%if signed_in?%>
    <%=link_to "", class: "button", data: {target: @cart_action, addUrl: add_to_cart_path(@musiccd), removeUrl: remove_from_cart_path(@musiccd)} do%>
      <i class="fi-shopping-cart"></i>
      <span><%=@cart_action%></span> Cart
    <%end%>
  <%end%>
</div>


<%= link_to 'Edit', edit_musiccd_path(@musiccd) %> |
<%= link_to 'Back', musiccds_path %>
